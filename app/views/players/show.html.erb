<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @player.name %>
</p>

<p>
  <b>Username:</b>
  <%= @player.username %>
</p>

<p>
	<b>League players is in:</b>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Rating</th>
			</tr>
	</th>
	<tbody>
		<%@teams.each do |team|%>
			<%team.leagues.each do |league|%>
				<tr>
					<td><%=league.name%></td>
					<td><%=team.rating(league)%></td>
				</tr>
			<%end%>
		<%end%>
	</tbody>
</table>
</p></br>
	

<%= link_to 'Edit', edit_player_path(@player) %> 
<%= link_to 'Back', players_path %>
