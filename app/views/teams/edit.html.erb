<h1>Editing team</h1>

<p>
<b>Players:</b>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Username</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<%@players.each do |player|%>
		<tr>
			<td><%=player.name%></td>
			<td><%=player.username%></td>
			<td><%=link_to 'Show', player_path(player)%> | <%=link_to "Remove", remove_player_path(:id => @team.id, :player_id => player.id)%> </td>
		</tr>
		<%end%>
	</tbody>
</table>
</p><br>

<%= render 'form' %>

<%= link_to 'Show', @team %> |
<%= link_to 'Back', teams_path %>
