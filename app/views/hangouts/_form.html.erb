<%= form_for [@league, @hangout] do |f| %>
  <% if @hangout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hangout.errors.count, "error") %> prohibited this hangout from being saved:</h2>

      <ul>
      <% @hangout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :player_names, "Add Players" %><br />
    <%= f.autocomplete_field :player_names, autocomplete_player_name_league_hangouts_path, 'data-delimiter' => ', ', :multiple => false %>
  </div>

<p>
<b>Matches Played:</b>
<table>
  <thead>
    <tr>
      <th>Winner</th>
      <th>Loser</th>
    </tr>
  </thead>
  <tbody>
	<%unless @matches.nil?%>
	        <%@matches.each do |m|%>
	        <tr>
        	  <td><%=m.winner%></td>
      		  <td><%=m.loser%></td>
        	</tr>
		<%end%>
      <%end%>
  </tbody>
</table>
</p><br>  


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
